<h1 class="mt-4">The COVID Book Club</h1>
<p class="lead mb-3">Welcome <%= name %></p>
<div class="row mt-5" id="newPost" display="none">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <%- include ('./partials/messages') %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p>
      </div>
    </div>
</div>
<button onclick="myFunction()" class="btn btn-primary btn-block" id="newPostBtn" >New Post</button>

  <script>
    var x = document.getElementById("newPost").style.display = "none";
    function myFunction() {
      var x   = document.getElementById("newPost");
      var btn = document.getElementById("newPostBtn");
      if (x.style.display === "none") {
        x.style.display = "block";
        btn.innerText   = "Cancel"
      } else {
        x.style.display = "none";
        btn.innerText   = "New Post"
      }
    }
</script>


<%- include ('./partials/messages') %>
<a href="/users/logout" class="btn btn-secondary">Logout</a>