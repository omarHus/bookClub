<h1 class="mt-4">The COVID Book Club</h1>
<p class="lead mb-3">Welcome <%= name %></p>
<div class="row mt-5" id="posts">
    <% posts.forEach(function(post) { %>
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>
            Title: <%= post.title %>
            Author: <%= post.author %>
            Posted by: <%= post.name %>
        </h1>
    <% }); %>
</div>
<div class="row mt-5" id="newPost" display="none">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>New Post</h1>
        <form action="/posts/newPost" method="POST">
            <div class="form-group">
                <input
                    type="hidden"
                    id="name"
                    name="name"
                    class="form-control"
                    placeholder="User name"
                    value="<%= name %>"
                />
              </div>
            <div class="form-group">
            <label for="title">Title</label>
            <input
              type="text"
              id="title"
              name="title"
              class="form-control"
              placeholder="Enter Book Title"
            />
          </div>
          <div class="form-group">
            <label for="author">Author</label>
            <input
              type="text"
              id="author"
              name="author"
              class="author"
              placeholder="author"
            />
          </div>
          <div class="form-group">
            <label for="review">Review</label>
            <input
              type="text"
              id="review"
              name="review"
              class="review"
              placeholder="review"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Submit New Post</button>
        </form>
      </div>
    </div>
</div>

<button onclick="myFunction()" class="btn btn-primary" id="newPostBtn" >New Post</button>

  <script>
    var x = document.getElementById("newPost").style.display = "none";
    function myFunction() {
      var x   = document.getElementById("newPost");
      var btn = document.getElementById("newPostBtn");
      if (x.style.display === "none") {
        x.style.display = "block";
        btn.innerText   = "Cancel"
      } else {
        x.style.display = "none";
        btn.innerText   = "New Post"
      }
    }
</script>
<%- include ('./partials/messages') %>
<a href="/users/logout" class="btn btn-secondary">Logout</a>